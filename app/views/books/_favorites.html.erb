<% if book.favorited_by?(current_user) %> <!-- <= favorited_by? は models/book.rbに定義している-->
  <p>
    <%= link_to book_favorites_path(book), method: :delete do %>
    ♥<%= book.favorites.count %> いいね<% end %>
  </p>
<% else %>
  <p>
    <%= link_to book_favorites_path(book), method: :post do %>
    ♡<%= book.favorites.count %> いいね<% end %>
  </p>
<% end %>